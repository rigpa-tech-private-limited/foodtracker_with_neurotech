<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/welcome_back_screen_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:id="@+id/oops_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/oops_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotationY="180"
            android:scaleType = "centerCrop"
            android:layout_gravity="center"
            android:contentDescription="-"
            android:layout_margin="30dp"/>
        <TextView
            android:id="@+id/non_existing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="24sp"
            android:text="@string/msg_non_existing_user"
            android:layout_gravity="bottom"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="22sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_img_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/person_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType = "centerCrop"
            android:rotationY="180"
            android:layout_gravity="center"
            android:contentDescription="-"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_text_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="top"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/work_hours"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_gravity="top"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>